    }

    if (_textureImage == null && textureData!['path'] != null) {
      print('ğŸ§© TEXTURE: çº¹ç†å›¾ç‰‡æœªåŠ è½½ï¼Œå¼€å§‹åŠ è½½: ${textureData!['path']}');
